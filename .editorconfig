root = true

[*]
trim_trailing_whitespace = true
insert_final_newline     = true
end_of_line              = lf
charset                  = utf-8
tab_width                = 2

[*.md]
indent_style             = space
max_line_length          = 80

[**.js]
indent_style = space
indent_size = 2

# 2 spaces in scss
[**.scss]
indent_style = space
indent_size = 2

[**.css]
indent_style = space
indent_size = 2

[**.php]
indent_style = space
indent_size = 4

[**.html]
indent_style = space
indent_size = 2
